{
  "composio_tasks": {
    "version": "1.0",
    "created": "2025-10-23",
    "repository": "imo-creator",
    "tasks": [
      {
        "task_id": "ctb_tagger",
        "name": "CTB Metadata Tagger",
        "description": "Injects CTB compliance metadata blocks into source files",
        "script": "ctb/sys/github-factory/scripts/ctb_metadata_tagger.py",
        "type": "compliance",
        "execution": {
          "command": "python",
          "args": ["ctb/sys/github-factory/scripts/ctb_metadata_tagger.py"],
          "working_directory": "."
        },
        "outputs": {
          "report": "CTB_TAGGING_REPORT.md",
          "data": "ctb/meta/tagging_data.json"
        },
        "requirements": {
          "python": ">=3.8",
          "dependencies": []
        },
        "schedule": "on_demand",
        "heir_tracking": true
      },
      {
        "task_id": "ctb_auditor",
        "name": "CTB Audit Generator",
        "description": "Generates comprehensive audit reports for CTB compliance",
        "script": "ctb/sys/github-factory/scripts/ctb_audit_generator.py",
        "type": "compliance",
        "execution": {
          "command": "python",
          "args": ["ctb/sys/github-factory/scripts/ctb_audit_generator.py"],
          "working_directory": "."
        },
        "outputs": {
          "report": "CTB_AUDIT_REPORT.md",
          "data": "ctb/meta/audit_data.json"
        },
        "requirements": {
          "python": ">=3.8",
          "dependencies": []
        },
        "depends_on": ["ctb_tagger"],
        "schedule": "weekly",
        "heir_tracking": true
      },
      {
        "task_id": "ctb_remediator",
        "name": "CTB Remediator",
        "description": "Automatically fixes CTB compliance issues",
        "script": "ctb/sys/github-factory/scripts/ctb_remediator.py",
        "type": "compliance",
        "execution": {
          "command": "python",
          "args": ["ctb/sys/github-factory/scripts/ctb_remediator.py"],
          "working_directory": "."
        },
        "outputs": {
          "report": "CTB_REMEDIATION_SUMMARY.md",
          "data": "ctb/meta/remediation_data.json",
          "registry": "ctb/meta/ctb_registry.json"
        },
        "requirements": {
          "python": ">=3.8",
          "dependencies": []
        },
        "depends_on": ["ctb_auditor"],
        "schedule": "weekly",
        "heir_tracking": true
      }
    ],
    "scenarios": [
      {
        "scenario_id": "CTB_Compliance_Cycle",
        "name": "Complete CTB Compliance Cycle",
        "description": "Runs full CTB compliance workflow: tag, audit, remediate",
        "tasks": [
          "ctb_tagger",
          "ctb_auditor",
          "ctb_remediator"
        ],
        "execution_order": "sequential",
        "schedule": "weekly_monday_00:00_utc",
        "notifications": {
          "on_success": true,
          "on_failure": true,
          "channels": ["github_pr_comment", "audit_report"]
        },
        "compliance_threshold": 90,
        "fail_on_threshold": true
      }
    ],
    "composio_integration": {
      "mcp_server": "http://localhost:3001",
      "heir_format": "HEIR-{year}-{month}-CTB-{task}-{version}",
      "process_id_format": "PRC-CTB-{timestamp}",
      "orbt_layer": 2,
      "blueprint_version": "1.0"
    }
  }
}
