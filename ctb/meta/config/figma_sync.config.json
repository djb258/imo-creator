{
  "figma_integration": {
    "enabled": true,
    "version": "1.0.0",
    "composio_endpoint": "http://localhost:3001/tool",
    "mcp_server": "http://localhost:3001"
  },
  "sync_settings": {
    "auto_sync": false,
    "sync_frequency": "on-demand",
    "supported_sync_types": [
      "design-tokens",
      "components",
      "assets",
      "prototypes",
      "full-sync"
    ],
    "default_sync_type": "design-tokens"
  },
  "design_tokens": {
    "enabled": true,
    "export_path": "design-system/tokens",
    "format": "json",
    "include": {
      "colors": true,
      "typography": true,
      "spacing": true,
      "effects": true,
      "borders": true,
      "shadows": true,
      "radii": true
    },
    "naming_convention": "kebab-case",
    "include_metadata": true
  },
  "components": {
    "enabled": true,
    "export_path": "design-system/components",
    "export_formats": ["svg", "png", "json"],
    "include": {
      "component_metadata": true,
      "variants": true,
      "properties": true,
      "instances": false
    },
    "svg_settings": {
      "optimize": true,
      "remove_ids": true,
      "minify": true
    },
    "png_settings": {
      "scale": 2,
      "quality": 90
    }
  },
  "assets": {
    "enabled": true,
    "export_path": "design-system/assets",
    "include": {
      "icons": true,
      "images": true,
      "illustrations": true,
      "logos": true
    },
    "icon_settings": {
      "format": "svg",
      "size": [16, 24, 32, 48],
      "color_mode": "multi-color"
    },
    "image_settings": {
      "format": "webp",
      "quality": 85,
      "generate_thumbnails": true
    }
  },
  "prototypes": {
    "enabled": true,
    "export_path": "design-system/prototypes",
    "include": {
      "flows": true,
      "interactions": true,
      "animations": false,
      "transitions": true
    },
    "export_format": "json"
  },
  "plugins": {
    "installed": [
      {
        "name": "Export PDF",
        "id": "1445938938074033409",
        "url": "https://www.figma.com/community/plugin/1445938938074033409/export-pdf",
        "enabled": true
      },
      {
        "name": "PDF Exporter",
        "id": "742664219575395510",
        "url": "https://www.figma.com/community/plugin/742664219575395510/PDF-Exporter",
        "enabled": true
      },
      {
        "name": "Chart",
        "id": "739208226250893725",
        "url": "https://www.figma.com/community/plugin/739208226250893725/Chart",
        "enabled": true
      },
      {
        "name": "Google Sheets Sync",
        "id": "747985633931346548",
        "url": "https://www.figma.com/community/plugin/747985633931346548/Google-Sheets-Sync",
        "enabled": true
      },
      {
        "name": "Design Lint",
        "id": "801195587259091012",
        "url": "https://www.figma.com/community/plugin/801195587259091012/Design-Lint",
        "enabled": true
      },
      {
        "name": "Accessibility Contrast Checker",
        "id": "742992099192946233",
        "url": "https://www.figma.com/community/plugin/742992099192946233/Accessibility-Contrast-Checker",
        "enabled": true
      },
      {
        "name": "Annotation Kit",
        "id": "823434922318019462",
        "url": "https://www.figma.com/community/plugin/823434922318019462/Annotation-Kit",
        "enabled": true
      },
      {
        "name": "Content Reel",
        "id": "826246267167433514",
        "url": "https://www.figma.com/community/plugin/826246267167433514/Content-Reel",
        "enabled": true
      },
      {
        "name": "3D Mockups",
        "id": "842267112908563912",
        "url": "https://www.figma.com/community/plugin/842267112908563912/3D-Mockups",
        "enabled": true
      },
      {
        "name": "Flowchart Kit",
        "id": "835195113074019300",
        "url": "https://www.figma.com/community/plugin/835195113074019300/Flowchart-Kit",
        "enabled": true
      },
      {
        "name": "Convertify",
        "id": "791989050714641598",
        "url": "https://www.figma.com/community/plugin/791989050714641598/Convertify",
        "enabled": true
      },
      {
        "name": "Pitchdeck Presentation Studio",
        "id": "748533339900865323",
        "url": "https://www.figma.com/community/plugin/748533339900865323/Pitchdeck-Presentation-Studio",
        "enabled": true
      }
    ],
    "auto_update": true
  },
  "target_repositories": {
    "default": "all-repos",
    "allowed_targets": [
      "imo-creator",
      "barton-outreach-core",
      "scraping-tool"
    ],
    "sync_strategy": "parallel"
  },
  "export_settings": {
    "file_naming": "kebab-case",
    "include_metadata": true,
    "compress_output": false,
    "generate_manifest": true,
    "manifest_format": "json"
  },
  "validation": {
    "validate_sync": true,
    "required_fields": ["sync_type", "target_repos"],
    "allow_partial_sync": true,
    "fail_on_error": true
  },
  "notifications": {
    "on_sync_start": false,
    "on_sync_complete": true,
    "on_sync_failure": true,
    "channels": ["workflow-logs"]
  },
  "security": {
    "require_authentication": true,
    "allowed_sources": ["github-actions", "manual-trigger"],
    "rate_limit": {
      "max_syncs_per_hour": 10,
      "max_syncs_per_day": 50
    }
  },
  "performance": {
    "timeout_seconds": 120,
    "retry_attempts": 3,
    "retry_delay_seconds": 5,
    "batch_size": 50
  },
  "audit": {
    "log_all_syncs": true,
    "retention_days": 90,
    "include_payload": true,
    "track_changes": true
  },
  "metadata": {
    "created": "2025-10-08",
    "last_updated": "2025-10-08",
    "version": "1.0.0",
    "maintainer": "IMO Creator Team"
  }
}
