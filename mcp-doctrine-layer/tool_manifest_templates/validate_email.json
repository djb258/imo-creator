{
  "tool_name": "validate_email",
  "version": "1.0.3",
  "classification": "utility_operation",
  "heir_compliance": "v2.1", 
  "orbt_policy": "low_risk_utility",
  
  "manifest": {
    "required_fields": {
      "unique_id": {
        "type": "string",
        "pattern": "^HEIR-[0-9]{4}-[0-9]{2}-[A-Z]{3,8}-[A-Z]{2,6}-[0-9]{2}$",
        "description": "HEIR-compliant unique identifier"
      },
      "process_id": {
        "type": "string",
        "pattern": "^PRC-[A-Z0-9]{8}-[0-9]{13}$",
        "description": "ORBT process tracking identifier"
      },
      "orbt_layer": {
        "type": "integer",
        "minimum": 1,
        "maximum": 3,
        "description": "ORBT policy layer for utility operations"
      },
      "blueprint_version": {
        "type": "string",
        "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+-[a-f0-9]{8}$",
        "description": "Versioned blueprint hash"
      }
    },
    
    "tool_specific_fields": {
      "email": {
        "type": "string",
        "format": "email",
        "max_length": 320,
        "required": true,
        "pii_classification": "personal_identifier"
      },
      "validation_level": {
        "type": "string",
        "enum": ["syntax", "domain", "smtp", "full"],
        "default": "syntax",
        "description": "Validation depth level"
      },
      "timeout": {
        "type": "integer",
        "minimum": 1,
        "maximum": 30,
        "default": 5,
        "description": "Validation timeout in seconds"
      }
    },
    
    "security_constraints": {
      "rate_limit": "100_per_minute",
      "pii_handling": "hash_after_validation",
      "log_retention": "24_hours",
      "external_service_calls": "domain_dns_only"
    },
    
    "fallback_behavior": {
      "on_timeout": "return_partial_result",
      "on_dns_failure": "syntax_validation_only", 
      "on_smtp_unreachable": "domain_validation_only",
      "on_rate_limit": "queue_with_delay"
    },
    
    "logging_schema": {
      "pre_execution": [
        "unique_id", "process_id", "email_hash", "validation_level",
        "timestamp", "orbt_layer"
      ],
      "post_execution": [
        "validation_result", "confidence_score", "execution_time",
        "validation_steps_completed", "compliance_status"
      ],
      "error_conditions": [
        "error_type", "validation_step_failed", "fallback_applied",
        "pii_handling_status"
      ]
    }
  },
  
  "compliance_checklist": {
    "heir_unique_id_format": "validated",
    "orbt_process_lineage": "tracked",
    "blueprint_version_consistency": "enforced",
    "pii_hashing": "mandatory_post_validation",
    "log_retention_limits": "enforced",
    "mantis_logging_integration": "enabled",
    "kill_switch_registration": "armed"
  },
  
  "pii_handling_protocol": {
    "email_input": "hash_sha256_with_salt",
    "validation_result": "boolean_only_logged",
    "error_messages": "sanitize_email_references",
    "retention": "purge_after_24h"
  }
}