# Cold Outreach Toolchain Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Transport Type (rest or mcp)
TRANSPORT_TYPE=rest

# Database Configuration (Neon PostgreSQL)
NEON_CONNECTION_STRING=postgresql://username:password@host:5432/database?sslmode=require

# API Keys for REST Transport
APIFY_API_KEY=apify_api_key_here
MILLIONVERIFIER_API_KEY=millionverifier_api_key_here

# REST API Endpoints (optional - defaults to official APIs)
APIFY_API_ENDPOINT=https://api.apify.com/v2
MILLIONVERIFIER_API_ENDPOINT=https://api.millionverifier.com/api/v3
NEON_API_ENDPOINT=https://console.neon.tech/api/v2

# MCP Server Configuration (for MCP transport)
MCP_APIFY_PORT=3001
MCP_EMAIL_VALIDATOR_PORT=3004  
MCP_NEON_PORT=3008

# Optional: External logging/monitoring
LOG_LEVEL=info
SENTRY_DSN=
DATADOG_API_KEY=

# Development/Testing
MOCK_MODE=false
DEBUG_CONTRACTS=false