{
  "role": "INTEGRATION_BRIDGE",
  "current_driver": "composio-mcp",
  "description": "External system integrations, API gateway, and tool orchestration with MCP compliance",
  "altitude": "20k",
  "interface_contract": {
    "input": "tool_request (object with tool_name, parameters, auth)",
    "output": "tool_response (object with result, status, execution_time)"
  },
  "capabilities": [
    "api_gateway",
    "tool_orchestration",
    "mcp_protocol",
    "external_service_integration"
  ],
  "status_endpoint": "/manual/troubleshooting/system_diagnostics.json#integration_bridge",
  "ort_manual": "/manual/ort-manuals/integration_bridge.ort.md",
  "supported_drivers": [
    {
      "name": "composio-mcp",
      "version": "latest",
      "provider": "Composio",
      "api_endpoint": "https://backend.composio.dev"
    },
    {
      "name": "zapier",
      "version": "latest",
      "provider": "Zapier",
      "api_endpoint": "https://api.zapier.com"
    },
    {
      "name": "n8n",
      "version": "latest",
      "provider": "n8n",
      "api_endpoint": "http://localhost:5678"
    }
  ],
  "barton_doctrine_compliance": {
    "requires_composio": true,
    "heir_orbt_tracking": true,
    "gatekeeper_validation": false,
    "mcp_protocol_enforced": true
  },
  "health_check": {
    "method": "GET",
    "endpoint": "/mcp/health",
    "expected_latency_ms": 200
  },
  "registered_tools": {
    "count": 100,
    "registry_endpoint": "/config/mcp_registry.json",
    "tool_manifest_path": "/sys/composio-mcp/tools/"
  }
}
