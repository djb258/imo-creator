{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bp: score example",
      "type": "shell",
      "command": "python tools/blueprint_score.py example"
    },
    {
      "label": "bp: visuals example",
      "type": "shell",
      "command": "python tools/blueprint_visual.py example"
    },
    {
      "label": "bp: score ${input:slug}",
      "type": "shell",
      "command": "python tools/blueprint_score.py ${input:slug}"
    },
    {
      "label": "bp: visuals ${input:slug}",
      "type": "shell",
      "command": "python tools/blueprint_visual.py ${input:slug}"
    },
    {
      "label": "ui: overview",
      "type": "shell",
      "command": "echo docs/blueprints/ui/overview.html"
    },
    {
      "label": "ui: input",
      "type": "shell",
      "command": "echo docs/blueprints/ui/input.html"
    },
    {
      "label": "ui: middle",
      "type": "shell",
      "command": "echo docs/blueprints/ui/middle.html"
    },
    {
      "label": "ui: output",
      "type": "shell",
      "command": "echo docs/blueprints/ui/output.html"
    },
    {
      "label": "sim: run ${input:slug}",
      "type": "shell",
      "command": "python tools/simflow/run.py --slug ${input:slug} --runs 2 --reset",
      "options": {
        "env": {}
      }
    },
    {
      "label": "api: run",
      "type": "shell",
      "command": "uvicorn src.server.main:app --port 7002 --reload"
    },
    {
      "label": "api: run with LLM",
      "type": "shell", 
      "command": "uvicorn src.server.main:app --port 7002 --reload --env-file .env"
    },
    {
      "label": "vercel: dev",
      "type": "shell",
      "command": "vercel dev"
    },
    {
      "label": "mcp: start server",
      "type": "shell",
      "command": "python src/mcp_server.py",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "env": {
          "BUILDER_IO_API_KEY": "9502e3493ccf42339f36d16b4a482c70",
          "MCP_SERVER_MODE": "vscode",
          "PORT": "7001"
        }
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "mcp: test integration",
      "type": "shell",
      "command": "python test_builder_integration.py",
      "group": "test",
      "dependsOn": "mcp: start server"
    },
    {
      "label": "builder: sync current file",
      "type": "shell",
      "command": "curl -X POST http://localhost:7001/vscode/sync-with-builder -H \"Content-Type: application/json\" -d '{\"file_path\": \"${file}\", \"component_name\": \"${fileBasenameNoExtension}\"}'",
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "slug",
      "type": "promptString",
      "description": "Blueprint slug name",
      "default": "example"
    }
  ]
}