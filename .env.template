# MCP Server Environment Configuration Template
# Copy this to .env and fill in your values

# ===========================================
# DATABASE CONNECTIONS
# ===========================================

# Primary Neon Database (System/Default)
NEON_DATABASE_URL=postgresql://username:password@host/database
NEON_APP_USER=mcp_app

# Marketing Database
MARKETING_DATABASE_URL=postgresql://username:password@host/marketing_db
MARKETING_APP_USER=marketing_app

# Real Estate Database  
REAL_ESTATE_DATABASE_URL=postgresql://username:password@host/realestate_db
REAL_ESTATE_APP_USER=realestate_app

# Command Operations Database
COMMAND_OPS_DATABASE_URL=postgresql://username:password@host/commandops_db
COMMAND_OPS_APP_USER=commandops_app

# Audit/Logs Database (can be same as NEON if preferred)
AUDIT_DATABASE_URL=postgresql://username:password@host/audit_db
AUDIT_APP_USER=audit_app

# ===========================================
# GOOGLE CLOUD / BIGQUERY
# ===========================================

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
BIGQUERY_LOCATION=US

# ===========================================
# FIREBASE CONFIGURATION  
# ===========================================

# Firebase Project Settings
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
# Alternative: FIREBASE_SERVICE_ACCOUNT_KEY=path/to/firebase-service-account.json

# ===========================================
# API KEYS - EXTERNAL SERVICES  
# ===========================================

# Apify (Web Scraping)
APIFY_API_KEY=your_apify_api_key_here

# GitHub (Repository Management)  
GITHUB_TOKEN=ghp_your_github_token_here

# Whimsical (Diagramming)
WHIMSICAL_API_KEY=your_whimsical_api_key_here

# Plasmic (UI Components)
PLASMIC_API_KEY=your_plasmic_api_key_here
PLASMIC_PROJECT_ID=your_project_id_here

# Vercel (Deployment)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_TEAM_ID=your_team_id_here

# Render (Cloud Infrastructure)
RENDER_API_KEY=your_render_api_key_here

# N8N (Workflow Automation)
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=https://your-n8n-instance.com/api/v1
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# FireCrawl (Advanced Scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================

# Kill Switch (Emergency Shutdown)
MCP_KILL_SWITCH=false

# Environment
NODE_ENV=development

# Mock Mode (for testing without external APIs)
USE_MOCK=false

# Logging Level
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# SERVER PORTS (for local development)
# ===========================================

# MCP Server Ports
WHIMSICAL_PORT=3000
NEON_PORT=3001
APIFY_PORT=3002  
CTB_PARSER_PORT=3003
EMAIL_VALIDATOR_PORT=3004
GITHUB_PORT=3005
PLASMIC_PORT=3006
VERCEL_PORT=3007
RENDER_PORT=3008
N8N_PORT=3009
FIRECRAWL_PORT=3010

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret (if implementing authentication)
JWT_SECRET=your_jwt_secret_here_min_32_chars

# API Key Validation
REQUIRE_API_KEY=false
MASTER_API_KEY=your_master_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# MONITORING & PERFORMANCE
# ===========================================

# Database Connection Limits
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Health Check Interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Hot Reload
HOT_RELOAD=true

# Debug Mode
DEBUG=mcp:*

# Performance Monitoring
ENABLE_PROFILING=false

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# Redis (for rate limiting and caching in production)
REDIS_URL=redis://localhost:6379

# Sentry (Error Monitoring)
SENTRY_DSN=your_sentry_dsn_here

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here