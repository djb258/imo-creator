# Production Environment Configuration
NODE_ENV=production
USE_MOCK=false
MCP_KILL_SWITCH=false
LOG_LEVEL=warn

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Timeouts
REQUEST_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Security
REQUIRE_API_KEY=true
CORS_ORIGIN=https://your-production-domain.com

# Database Pools
DB_POOL_MIN=2
DB_POOL_MAX=20

# Production API Keys (set these in your deployment environment)
# NEON_DATABASE_URL=
# MARKETING_DATABASE_URL=
# REAL_ESTATE_DATABASE_URL=
# COMMAND_OPS_DATABASE_URL=
# AUDIT_DATABASE_URL=

# External Service Keys
# APIFY_API_KEY=
# GITHUB_TOKEN=
# WHIMSICAL_API_KEY=
# PLASMIC_API_KEY=
# VERCEL_TOKEN=
# RENDER_API_KEY=

# Google Cloud / BigQuery
# GOOGLE_CLOUD_PROJECT_ID=
# GOOGLE_CLOUD_KEY_FILE=

# Firebase
# FIREBASE_PROJECT_ID=
# FIREBASE_SERVICE_ACCOUNT_KEY=

# Monitoring
# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=