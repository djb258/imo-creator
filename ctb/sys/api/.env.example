# CTB/SYS/API Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ============================================
# API Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
RELOAD=false
DEBUG=false
LOG_LEVEL=info

# ============================================
# Composio MCP Server
# ============================================
COMPOSIO_API_KEY=<your-composio-api-key>
COMPOSIO_MCP_URL=http://localhost:3001

# Example: Get your API key from https://app.composio.dev/settings
# COMPOSIO_API_KEY=ak_t-xxxxxxxxxxxxx

# ============================================
# CORS Configuration
# ============================================
ALLOW_ORIGIN=http://localhost:7002
ALLOW_CREDENTIALS=true
ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOW_HEADERS=*

# ============================================
# Authentication & Security
# ============================================
SECRET_KEY=<your-secret-key-min-32-chars>
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Example: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-generated-secret-key-here

# ============================================
# MCP Vault Configuration
# ============================================
MCP_VAULT_ENABLED=true
MCP_VAULT_URL=http://localhost:3001/vault

# Use MCP Vault for storing sensitive credentials
# Access variables in code: process.env.MCP_<VARIABLE_NAME>

# ============================================
# External Service API Keys (via MCP Vault)
# ============================================
# These should be stored in MCP Vault, not in .env
# Listed here for documentation purposes only

# MCP_OPENAI_API_KEY=<stored-in-mcp-vault>
# MCP_ANTHROPIC_API_KEY=<stored-in-mcp-vault>
# MCP_GITHUB_TOKEN=<stored-in-mcp-vault>
# MCP_SLACK_TOKEN=<stored-in-mcp-vault>

# ============================================
# Logging Configuration
# ============================================
LOG_FILE=logs/api.log
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ============================================
# Performance & Limits
# ============================================
MAX_WORKERS=4
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Development Settings (DEV ONLY)
# ============================================
# ENABLE_DEBUG_TOOLBAR=false
# ENABLE_API_DOCS=true
# ENABLE_SWAGGER=true

# ============================================
# Production Settings (PRODUCTION ONLY)
# ============================================
# PRODUCTION=true
# SENTRY_DSN=<your-sentry-dsn>
# METRICS_ENABLED=true
