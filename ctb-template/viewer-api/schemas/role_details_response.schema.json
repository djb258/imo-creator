{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ctb.barton-doctrine.dev/schemas/role_details_response.schema.json",
  "title": "CTB Role Details Response",
  "description": "Schema for individual CTB role details API response",
  "type": "object",
  "required": [
    "role",
    "current_driver",
    "altitude",
    "status",
    "health"
  ],
  "properties": {
    "role": {
      "type": "string",
      "enum": ["AI_ENGINE", "WORKBENCH_DB", "VAULT_DB", "INTEGRATION_BRIDGE"],
      "description": "Functional role identifier (vendor-agnostic)"
    },
    "current_driver": {
      "type": "string",
      "description": "Currently active driver implementation",
      "examples": ["gemini", "claude", "firebase", "mongodb", "neon", "postgres", "composio-mcp"]
    },
    "description": {
      "type": "string",
      "description": "Human-readable role description"
    },
    "altitude": {
      "type": "string",
      "enum": ["40k", "20k", "10k", "5k"],
      "description": "CTB altitude classification"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "maintenance"],
      "description": "Operational status"
    },
    "health": {
      "type": "object",
      "required": ["status", "latency_ms", "last_check"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["connected", "healthy", "degraded", "disconnected"]
        },
        "latency_ms": {
          "type": "number",
          "minimum": 0
        },
        "last_check": {
          "type": "string",
          "format": "date-time"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "interface_contract": {
      "type": "object",
      "description": "Standard interface for this role (vendor-agnostic)",
      "properties": {
        "input": {
          "type": "string",
          "description": "Expected input format"
        },
        "output": {
          "type": "string",
          "description": "Expected output format"
        },
        "methods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Available methods/operations"
        }
      }
    },
    "supported_drivers": {
      "type": "array",
      "description": "List of available driver implementations",
      "items": {
        "type": "object",
        "required": ["name", "version", "provider"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Driver identifier"
          },
          "version": {
            "type": "string",
            "description": "Driver version"
          },
          "provider": {
            "type": "string",
            "description": "Vendor/provider name"
          },
          "status": {
            "type": "string",
            "enum": ["available", "configured", "active", "deprecated"],
            "description": "Driver availability status"
          }
        }
      }
    },
    "ort_manual": {
      "type": "string",
      "description": "Path to ORBT (Operate/Repair/Build/Train) manual",
      "pattern": "^/manual/ort-manuals/.*\\.ort\\.md$"
    },
    "status_endpoint": {
      "type": "string",
      "description": "Path to status diagnostics endpoint"
    },
    "barton_doctrine_compliance": {
      "type": "object",
      "description": "Barton Doctrine enforcement rules for this role",
      "additionalProperties": {
        "type": "boolean"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional role-specific metadata",
      "properties": {
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "maintainer": {
          "type": "string"
        },
        "documentation_url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
