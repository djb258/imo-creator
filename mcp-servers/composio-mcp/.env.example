# Composio MCP Server Configuration Template
# Copy this file to .env and fill in your actual API keys

# ===========================================
# COMPOSIO CONFIGURATION
# ===========================================
# Get from: https://app.composio.dev/api-keys
COMPOSIO_API_KEY=your_composio_api_key_here
COMPOSIO_BASE_URL=https://backend.composio.dev
COMPOSIO_DISABLE_TELEMETRY=false
PORT=3001

# ===========================================
# INSTANTLY INTEGRATION (Email Outreach)
# ===========================================
# Get from: https://app.instantly.ai/app/settings/integrations
INSTANTLY_API_KEY=your_instantly_api_key_here
INSTANTLY_WEBHOOK_SECRET=your_webhook_secret_here
INSTANTLY_DEFAULT_FROM_NAME=Your Company
INSTANTLY_DEFAULT_REPLY_TO=replies@yourdomain.com
INSTANTLY_DEFAULT_EMAILS_PER_DAY=50

# ===========================================
# HEYREACH INTEGRATION (LinkedIn Outreach)
# ===========================================
# Get from: https://app.heyreach.io/settings/api
HEYREACH_API_KEY=your_heyreach_api_key_here
HEYREACH_WEBHOOK_SECRET=your_webhook_secret_here
HEYREACH_DEFAULT_CONNECTION_LIMIT=20
HEYREACH_DEFAULT_MESSAGE_LIMIT=30
HEYREACH_LINKEDIN_PROFILE_EXTRACTION=true

# ===========================================
# NEON DATABASE CONFIGURATION
# ===========================================
# Get from: https://console.neon.tech/app/projects
NEON_DATABASE_URL=your_neon_database_url_here
NEON_CONNECTION_STRING=postgresql://user:password@host/database
SYNC_OUTCOMES_TO_NEON=true
OUTCOME_SYNC_INTERVAL_MS=60000

# ===========================================
# SMARTSHEET CONFIGURATION (Project Management)
# ===========================================
# Get from: https://app.smartsheet.com/Personal-Settings/API-Access
SMARTSHEET_API_TOKEN=your_smartsheet_api_token_here
SMARTSHEET_WORKSPACE_ID=your_workspace_id
SMARTSHEET_DEFAULT_FOLDER=root

# ===========================================
# LOVABLE.DEV CONFIGURATION (UI Generation)
# ===========================================
# Routes through Composio - no separate key needed
LOVABLE_VIA_COMPOSIO=true

# ===========================================
# BUILDER.IO CONFIGURATION (Visual CMS)
# ===========================================
# Get from: https://builder.io/account/organization
BUILDER_IO_API_KEY=your_builder_api_key_here
BUILDER_IO_SPACE_ID=your_space_id
BUILDER_IO_VIA_COMPOSIO=true

# ===========================================
# FIGMA CONFIGURATION (Design Tools)
# ===========================================
# Get from: https://www.figma.com/developers/api#access-tokens
FIGMA_PERSONAL_ACCESS_TOKEN=your_figma_token_here
FIGMA_VIA_COMPOSIO=true

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CAMPAIGN DEFAULTS
# ===========================================
DEFAULT_TIMEZONE=America/New_York
DEFAULT_SEND_START_HOUR=9
DEFAULT_SEND_END_HOUR=17

# ===========================================
# SAFETY & COMPLIANCE
# ===========================================
RESPECT_PLATFORM_LIMITS=true
SAFE_MODE=true
HEIR_COMPLIANCE=true
ORBT_LAYER_MAX=5

# ===========================================
# REDIS CONFIGURATION (Optional for caching)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================
KILL_SWITCH_ACTIVE=false
ENABLE_MANTIS_LOGGING=true
CACHE_TTL_SECONDS=180