# CTB/SYS/API - Environment Variables Template
# API Server Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API SERVER SETTINGS
# =============================================================================

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# Environment
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# API Authentication
API_KEY=your_internal_api_key_for_authentication_min_32_chars
API_SECRET=your_api_secret_key_min_32_characters_long

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_required
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# COMPOSIO INTEGRATION
# =============================================================================

# Composio API Credentials
COMPOSIO_API_KEY=ak_your_composio_api_key_here
COMPOSIO_USER_ID=usr_your_composio_user_id_here
COMPOSIO_API_URL=https://backend.composio.dev
COMPOSIO_BASE_URL=https://backend.composio.dev

# Composio MCP Server
COMPOSIO_MCP_HOST=localhost
COMPOSIO_MCP_PORT=3001
COMPOSIO_MCP_URL=http://localhost:3001/tool

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# Neon PostgreSQL
DATABASE_URL=postgresql://user:password@ep-xxxxx-xxxxx.us-east-2.aws.neon.tech/main?sslmode=require
NEON_DATABASE_URL=postgresql://user:password@ep-xxxxx-xxxxx.us-east-2.aws.neon.tech/main?sslmode=require

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# FIREBASE/FIRESTORE
# =============================================================================

# Firebase Project
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Web Config
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# =============================================================================
# AI MODEL APIS
# =============================================================================

# Google Gemini
GOOGLE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=1000000

# OpenAI (Optional)
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_MODEL=gpt-4-turbo

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLAUDE_MODEL=claude-3-sonnet-20240229

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/api.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Request Logging
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_HEADERS=false

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# HEIR/ORBT CONFIGURATION
# =============================================================================

# HEIR ID Generation
HEIR_SYSTEM_PREFIX=SYS
HEIR_VERSION=1

# ORBT Layer Configuration
ORBT_LAYER=2
ORBT_ENABLED=true

# =============================================================================
# CACHING (Optional)
# =============================================================================

# Redis Cache (if using)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false
CACHE_TTL=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# API Features
FEATURE_COMPOSIO_ENABLED=true
FEATURE_AI_ENABLED=true
FEATURE_HEIR_ORBT_ENABLED=true
FEATURE_RATE_LIMITING=true

# Debug Features
DEBUG_SQL=false
DEBUG_API_CALLS=false
DEBUG_AI_PROMPTS=false

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Deployment Settings
DEPLOYMENT_ENV=development
VERSION=1.0.0
BUILD_NUMBER=1

# Health Check
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env in the same directory
# 2. Fill in actual values for all required variables
# 3. NEVER commit .env to git
# 4. Required variables: API_KEY, DATABASE_URL, COMPOSIO_API_KEY
# 5. Optional variables can be left empty if features are disabled
