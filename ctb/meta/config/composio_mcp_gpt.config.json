{
  "name": "Composio MCP GPT Configuration",
  "version": "1.0.0",
  "description": "Configuration for doctrine validation and build automation GPT using Composio MCP",
  "gpt_config": {
    "gpt_name": "Composio MCP GPT",
    "gpt_id": "composio-mcp-v1",
    "purpose": "Doctrine validation, build automation, and deployment orchestration",
    "composio_endpoint": "http://localhost:3001/tool",
    "capabilities": [
      "doctrine_validation",
      "build_automation",
      "deployment_orchestration",
      "repository_management",
      "workflow_coordination"
    ]
  },
  "connected_services": {
    "github": {
      "enabled": true,
      "permissions": ["read", "write", "actions"],
      "features": ["repositories", "workflows", "pull_requests", "issues"]
    },
    "render": {
      "enabled": true,
      "permissions": ["read", "deploy", "monitor"],
      "services": ["web_services", "background_workers", "databases"]
    },
    "vercel": {
      "enabled": true,
      "permissions": ["read", "deploy", "configure"],
      "projects": ["frontend", "api", "edge_functions"]
    },
    "figma": {
      "enabled": true,
      "permissions": ["read", "write", "export"],
      "features": ["design_tokens", "assets", "prototypes"]
    }
  },
  "doctrine_validation": {
    "enabled": true,
    "validation_rules": {
      "code_quality": {
        "linting": true,
        "type_checking": true,
        "test_coverage": true,
        "security_scan": true
      },
      "deployment_readiness": {
        "build_success": true,
        "dependency_check": true,
        "environment_validation": true,
        "configuration_validation": true
      },
      "compliance": {
        "security_policies": true,
        "performance_benchmarks": true,
        "accessibility_standards": true,
        "documentation_completeness": true
      }
    },
    "validation_endpoints": {
      "doctrine_validate": "http://localhost:3001/tool",
      "build_check": "http://localhost:3001/tool",
      "security_scan": "http://localhost:3001/tool",
      "compliance_audit": "http://localhost:3001/tool"
    }
  },
  "automation_workflows": {
    "doctrine_branches": {
      "auto_deploy": true,
      "validation_required": true,
      "rollback_on_failure": true,
      "notification_channels": ["slack", "email"]
    },
    "production_deployment": {
      "manual_approval": true,
      "staged_rollout": true,
      "health_monitoring": true,
      "performance_tracking": true
    },
    "cross_repo_sync": {
      "enabled": true,
      "target_repos": ["sales-hive", "client-hive", "outreach-hive"],
      "sync_triggers": ["push", "workflow_completion", "manual"]
    }
  },
  "security": {
    "authentication": "oauth2",
    "token_management": "composio_handled",
    "deployment_controls": {
      "require_validation": true,
      "kill_switch_enabled": true,
      "human_firebreak": true
    },
    "audit_logging": {
      "enabled": true,
      "storage": "firebase.firestore:deployment_logs",
      "retention_days": 90
    }
  },
  "integration": {
    "composio_mcp": {
      "relay_endpoint": "http://localhost:3001/tool",
      "webhook_events": [
        "doctrine_validation_complete",
        "build_started",
        "build_completed",
        "deployment_initiated",
        "deployment_completed",
        "validation_failed",
        "human_intervention_required"
      ],
      "response_format": "json",
      "timeout": 300000,
      "retry_policy": {
        "max_attempts": 3,
        "backoff_strategy": "exponential",
        "failure_escalation": "human_firebreak_queue"
      }
    }
  },
  "monitoring": {
    "deployment_tracking": true,
    "performance_metrics": true,
    "error_alerting": true,
    "usage_analytics": true,
    "health_checks": {
      "interval": 300,
      "endpoints": [
        "http://localhost:3001/tool",
        "http://localhost:3001/tool",
        "http://localhost:3001/tool"
      ]
    },
    "activity_logs": {
      "retention_days": 90,
      "storage_location": "firebase.firestore:composio_mcp_logs"
    }
  },
  "human_firebreak": {
    "enabled": true,
    "queue_endpoint": "http://localhost:3001/tool",
    "escalation_rules": {
      "validation_failure": "immediate",
      "deployment_failure": "immediate",
      "security_violation": "immediate",
      "performance_degradation": "within_1_hour"
    },
    "notification_channels": {
      "primary": "slack",
      "secondary": "email",
      "emergency": "sms"
    }
  }
}