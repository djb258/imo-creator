{
  "tool_name": "instantly-mcp",
  "version": "1.0.0",
  "description": "Custom Instantly.ai email outreach integration with API v2 support and HEIR/ORBT compliance",
  "tools": [
    {
      "name": "instantly_create_campaign",
      "description": "Create a new email outreach campaign in Instantly.ai",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_name": {
            "type": "string",
            "description": "Name of the email campaign"
          },
          "subject_line": {
            "type": "string",
            "description": "Email subject line"
          },
          "email_body": {
            "type": "string",
            "description": "HTML or plain text email body"
          },
          "from_name": {
            "type": "string",
            "description": "Sender name (defaults to configured name)",
            "default": "Your Company"
          },
          "reply_to": {
            "type": "string",
            "description": "Reply-to email address (defaults to configured)",
            "default": "replies@yourdomain.com"
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Campaign tags for organization"
          },
          "schedule": {
            "type": "object",
            "properties": {
              "start_date": {"type": "string", "format": "date"},
              "emails_per_day": {"type": "number", "default": 50},
              "timezone": {"type": "string", "default": "America/New_York"}
            }
          }
        },
        "required": ["campaign_name", "subject_line", "email_body"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {"type": "string"},
          "campaign_name": {"type": "string"},
          "status": {"type": "string"},
          "created_at": {"type": "string"},
          "heir_trace_id": {"type": "string"}
        }
      }
    },
    {
      "name": "instantly_add_leads",
      "description": "Add leads to an Instantly.ai campaign",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {
            "type": "string",
            "description": "ID of the campaign to add leads to"
          },
          "leads": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "email": {"type": "string", "format": "email"},
                "first_name": {"type": "string"},
                "last_name": {"type": "string"},
                "company": {"type": "string"},
                "title": {"type": "string"},
                "linkedin_url": {"type": "string"},
                "custom_variables": {
                  "type": "object",
                  "additionalProperties": {"type": "string"}
                }
              },
              "required": ["email"]
            },
            "description": "Array of lead objects to add"
          },
          "skip_duplicates": {
            "type": "boolean",
            "description": "Skip leads that already exist",
            "default": true
          }
        },
        "required": ["campaign_id", "leads"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "leads_added": {"type": "number"},
          "leads_skipped": {"type": "number"},
          "errors": {"type": "array"},
          "heir_trace_id": {"type": "string"}
        }
      }
    },
    {
      "name": "instantly_get_campaign_stats",
      "description": "Get detailed statistics for an Instantly.ai campaign",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {
            "type": "string",
            "description": "ID of the campaign to get stats for"
          },
          "date_range": {
            "type": "object",
            "properties": {
              "start_date": {"type": "string", "format": "date"},
              "end_date": {"type": "string", "format": "date"}
            }
          }
        },
        "required": ["campaign_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {"type": "string"},
          "campaign_name": {"type": "string"},
          "stats": {
            "type": "object",
            "properties": {
              "total_leads": {"type": "number"},
              "emails_sent": {"type": "number"},
              "opens": {"type": "number"},
              "clicks": {"type": "number"},
              "replies": {"type": "number"},
              "bounces": {"type": "number"},
              "unsubscribes": {"type": "number"},
              "open_rate": {"type": "number"},
              "click_rate": {"type": "number"},
              "reply_rate": {"type": "number"}
            }
          },
          "heir_trace_id": {"type": "string"}
        }
      }
    },
    {
      "name": "instantly_send_test_email",
      "description": "Send a test email to verify campaign setup",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {
            "type": "string",
            "description": "ID of the campaign to test"
          },
          "test_email": {
            "type": "string",
            "format": "email",
            "description": "Email address to send test to"
          },
          "custom_variables": {
            "type": "object",
            "additionalProperties": {"type": "string"},
            "description": "Variables to use in test email"
          }
        },
        "required": ["campaign_id", "test_email"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "test_sent": {"type": "boolean"},
          "message_id": {"type": "string"},
          "heir_trace_id": {"type": "string"}
        }
      }
    },
    {
      "name": "instantly_list_campaigns",
      "description": "List all campaigns in Instantly.ai account",
      "input_schema": {
        "type": "object",
        "properties": {
          "status_filter": {
            "type": "string",
            "enum": ["active", "paused", "completed", "draft"],
            "description": "Filter campaigns by status"
          },
          "limit": {
            "type": "number",
            "description": "Number of campaigns to return",
            "default": 50
          },
          "offset": {
            "type": "number",
            "description": "Offset for pagination",
            "default": 0
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "campaigns": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "campaign_id": {"type": "string"},
                "campaign_name": {"type": "string"},
                "status": {"type": "string"},
                "created_at": {"type": "string"},
                "leads_count": {"type": "number"}
              }
            }
          },
          "total_count": {"type": "number"},
          "heir_trace_id": {"type": "string"}
        }
      }
    },
    {
      "name": "instantly_pause_campaign",
      "description": "Pause or resume an Instantly.ai campaign",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {
            "type": "string",
            "description": "ID of the campaign to pause/resume"
          },
          "action": {
            "type": "string",
            "enum": ["pause", "resume"],
            "description": "Action to perform"
          }
        },
        "required": ["campaign_id", "action"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {"type": "string"},
          "status": {"type": "string"},
          "action_performed": {"type": "string"},
          "heir_trace_id": {"type": "string"}
        }
      }
    },
    {
      "name": "instantly_get_replies",
      "description": "Get replies from Instantly.ai campaigns",
      "input_schema": {
        "type": "object",
        "properties": {
          "campaign_id": {
            "type": "string",
            "description": "Filter by specific campaign (optional)"
          },
          "date_range": {
            "type": "object",
            "properties": {
              "start_date": {"type": "string", "format": "date"},
              "end_date": {"type": "string", "format": "date"}
            }
          },
          "interest_score_min": {
            "type": "number",
            "description": "Minimum AI interest score (0-100)",
            "default": 0
          },
          "limit": {
            "type": "number",
            "default": 100
          }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "replies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reply_id": {"type": "string"},
                "campaign_id": {"type": "string"},
                "lead_email": {"type": "string"},
                "reply_body": {"type": "string"},
                "interest_score": {"type": "number"},
                "sentiment": {"type": "string"},
                "received_at": {"type": "string"}
              }
            }
          },
          "total_replies": {"type": "number"},
          "heir_trace_id": {"type": "string"}
        }
      }
    }
  ],
  "manifest": {
    "required_fields": [
      "unique_id",
      "process_id", 
      "orbt_layer",
      "blueprint_version"
    ]
  },
  "compliance_checklist": {
    "heir_compliance": true,
    "orbt_layer_5": true,
    "mantis_logging": true,
    "kill_switch": true,
    "payload_validation": true,
    "instantly_api_v2": true
  },
  "orbt_escalation_matrix": {
    "layer_1": "Read campaign statistics only",
    "layer_2": "Basic campaign management",
    "layer_3": "Lead addition and management",
    "layer_4": "Campaign creation and editing",
    "layer_5": "Full operational access",
    "layer_6": "Account-level settings", 
    "layer_7": "System-level operations"
  },
  "heir_compliance": {
    "unique_id": "HEIR-2024-12-INSTANTLY-CUSTOM-01",
    "layer": 5,
    "process_tracking": true,
    "audit_trail": true,
    "api_integration": "instantly_api_v2"
  },
  "instantly_integration": {
    "api_version": "v2",
    "base_url": "https://api.instantly.ai/v2",
    "authentication": "api_key",
    "rate_limits": {
      "requests_per_minute": 100,
      "requests_per_hour": 1000
    },
    "supported_features": [
      "campaign_management",
      "lead_management", 
      "email_analytics",
      "test_emails",
      "reply_management",
      "ai_interest_scoring"
    ]
  }
}