{
  "role": "WORKBENCH_DB",
  "current_driver": "firebase",
  "description": "Staging database for active operations, validation queues, and temporary data processing",
  "altitude": "5k",
  "interface_contract": {
    "input": "document (object with unique_id, data, metadata)",
    "output": "write_confirmation (object with document_id, timestamp)"
  },
  "capabilities": [
    "realtime_updates",
    "document_storage",
    "queuing_system",
    "validation_staging"
  ],
  "status_endpoint": "/manual/troubleshooting/system_diagnostics.json#workbench_db",
  "ort_manual": "/manual/ort-manuals/workbench_db.ort.md",
  "supported_drivers": [
    {
      "name": "firebase",
      "version": "10.x",
      "provider": "Google Firebase",
      "api_endpoint": "https://firestore.googleapis.com"
    },
    {
      "name": "mongodb",
      "version": "7.x",
      "provider": "MongoDB",
      "api_endpoint": "mongodb://localhost:27017"
    },
    {
      "name": "redis",
      "version": "7.x",
      "provider": "Redis Labs",
      "api_endpoint": "redis://localhost:6379"
    }
  ],
  "barton_doctrine_compliance": {
    "requires_composio": false,
    "heir_orbt_tracking": true,
    "gatekeeper_validation": true,
    "staging_memory": true
  },
  "health_check": {
    "method": "GET",
    "endpoint": "/health",
    "expected_latency_ms": 100
  },
  "promotion_flow": {
    "target": "vault_db",
    "trigger": "validation_complete",
    "gatekeeper_required": true
  }
}
