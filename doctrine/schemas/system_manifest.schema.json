{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["meta", "tool_sections", "acronyms", "relationships"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["doctrine_source", "last_updated", "author", "description"]
    },
    "tool_sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "purpose"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "purpose": { "type": "string" },
          "current_tool": {},
          "doctrine_alias": { "type": "string" }
        }
      }
    },
    "acronyms": { "type": "array" },
    "relationships": { "type": "object" }
  }
}


