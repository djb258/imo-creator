# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=*

# GitHub Integration
GITHUB_TOKEN=ghp_your_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Whimsical Integration
WHIMSICAL_API_KEY=your_whimsical_api_key_here
WHIMSICAL_API_URL=https://whimsical.com/api/v1

# LLM Integration (OpenAI/Anthropic)
LLM_API_KEY=sk-your_api_key_here
LLM_MODEL=gpt-4
LLM_API_URL=https://api.openai.com/v1

# Plasmic Integration
PLASMIC_PROJECT_ID=your_project_id_here
PLASMIC_AUTH_TOKEN=your_auth_token_here

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600