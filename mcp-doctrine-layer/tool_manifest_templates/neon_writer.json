{
  "tool_name": "neon_writer",
  "version": "1.2.0",
  "classification": "database_operation",
  "heir_compliance": "v2.1",
  "orbt_policy": "write_restricted",
  
  "manifest": {
    "required_fields": {
      "unique_id": {
        "type": "string",
        "pattern": "^HEIR-[0-9]{4}-[0-9]{2}-[A-Z]{3,8}-[A-Z]{2,6}-[0-9]{2}$",
        "description": "HEIR-compliant unique identifier"
      },
      "process_id": {
        "type": "string", 
        "pattern": "^PRC-[A-Z0-9]{8}-[0-9]{13}$",
        "description": "ORBT process tracking identifier"
      },
      "orbt_layer": {
        "type": "integer",
        "minimum": 1,
        "maximum": 7,
        "description": "ORBT policy enforcement layer (1=executive, 7=routine)"
      },
      "blueprint_version": {
        "type": "string",
        "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+-[a-f0-9]{8}$",
        "description": "Versioned blueprint hash"
      }
    },
    
    "tool_specific_fields": {
      "database_url": {
        "type": "string",
        "format": "uri",
        "classification": "sensitive",
        "required": true
      },
      "query": {
        "type": "string",
        "max_length": 4096,
        "validation": "sql_injection_check",
        "required": true
      },
      "table_name": {
        "type": "string",
        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
        "required": true
      }
    },
    
    "security_constraints": {
      "allowed_operations": ["INSERT", "UPDATE", "CREATE"],
      "forbidden_patterns": ["DROP", "DELETE", "TRUNCATE", "ALTER"],
      "rate_limit": "10_per_minute",
      "auth_required": true
    },
    
    "fallback_behavior": {
      "on_validation_failure": "trigger_orbt_repair",
      "on_execution_error": "log_and_abort",
      "on_security_violation": "immediate_kill_switch"
    },
    
    "logging_schema": {
      "pre_execution": ["unique_id", "process_id", "query_hash", "timestamp"],
      "post_execution": ["result_status", "rows_affected", "execution_time", "compliance_status"],
      "error_conditions": ["error_type", "error_message", "stack_trace", "mitigation_action"]
    }
  },
  
  "compliance_checklist": {
    "heir_unique_id_format": "validated",
    "orbt_process_lineage": "tracked", 
    "blueprint_version_consistency": "enforced",
    "mantis_logging_integration": "enabled",
    "kill_switch_registration": "armed"
  }
}