{
  "tier": "micro",
  "description": "CTB layout for single-tool repos (ingestor, parser, etc.)",
  "include": [
    "sys",
    "apps/tools",
    "data/zod"
  ],
  "exclude": [
    "ai",
    "docs",
    "tests/integration"
  ],
  "use_cases": [
    "Single-purpose CLI tools",
    "Data ingestors and parsers",
    "Lightweight microservices",
    "Utility libraries"
  ],
  "minimum_team_size": 1,
  "complexity": "low"
}
